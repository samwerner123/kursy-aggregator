---
const response = await fetch('https://api.advcake.ru/common-feeds?pass=lXPhODj_9-HkHurD');
const { data } = await response.json();
const courses = data.filter((item) => item.category_alias === 'education');
---

<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Агрегатор курсов 2026</title>
    <style>
        body { font-family: sans-serif; background: #f4f4f4; padding: 20px; }
        .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px; }
        .card { background: white; padding: 15px; border-radius: 10px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        .price { font-size: 20px; color: #007bff; font-weight: bold; }
        .link { display: block; margin-top: 10px; text-align: center; background: #28a745; color: white; padding: 10px; border-radius: 5px; text-decoration: none; }
    </style>
</head>
<body>
    <h1>Найдено курсов: {courses.length}</h1>
    <div class="grid">
        {courses.map((c) => (
            <div class="card">
                <img src={c.image} style="width:100%; height:150px; object-fit:contain" />
                <h3>{c.name}</h3>
                <p>Школа: {c.school_name}</p>
                <div class="price">{c.price} ₽</div>
                <a href={c.url} class="link" target="_blank">Купить курс</a>
            </div>
        ))}
    </div>
</body>
</html>

